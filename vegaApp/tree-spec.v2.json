{
  "data": [
    {
      "name": "tree",
      "url": "data/fixed-teleost-tree.nested-json",
      "format": {"type": "treejson"},
      "transform": [
        { "type": "hierarchy", "mode": "cluster", "nodesize": [11,80] },
        { "type": "formula", "field": "align",
          "expr": "datum.children ? 'right' : 'left'" },
        { "type": "formula", "field": "offset",
          "expr": "datum.children ? -5 : 5" }
      ]
    }
  ],
  "marks": [
    {
      "type": "path",
      "from": {
        "data": "tree",
        "transform": [
          {"type": "filter", "test": "datum.parent"},
          {
            "type": "linkpath",
            "sourceX": "parent.layout_y",
            "sourceY": "parent.layout_x",
            "targetX": "layout_y", 
            "targetY": "layout_x",
            "shape": "cornerX"
          }
        ]
      },
      "properties": {
        "enter": {
          "path": {"field": "layout_path"},
          "stroke": {"value": "#ddd"}
        }
      }
    },
    {
      "type": "symbol",
      "from": {"data": "tree"},
      "properties" : {
        "update": {
          "shape": "circle",
          "size": {"value": 50},
          "stroke": {"value": "#bbf"},
          "x": {"field": "layout_y"},
          "dx": {"field": "offset"},
          "y": {"field": "layout_x"},
          "fill":{"value": "#bbb"}
        },
        "hover" : {
          "fill":{"value": "#fbb"}  
        }
      }
    },

    {
      "type": "text",
      "from": {"data": "tree"},
      "properties": {
        "enter": {
          "x": {"field": "layout_y"},
          "dx": {"field": "offset"},
          "y": {"field": "layout_x"},
          "font": {"value": "Helvetica Neue"},
          "fontSize": {"value": 10},
          "align": {"field": "align"},
          "baseline": {"value": "middle"},
          "fill": {"value": "#000"},
          "text": {"field": "node_data.node name"}
        }
      }
    }
  ]
}